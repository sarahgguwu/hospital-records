 <!-- form handling -->
 <form action="/api/users" method="POST" id="add_user">
    <div class="new_user">
        <div class="form-group">
            <label for="name" class="text-dark">Name</label>
            <input type="hidden" name="id" value="">
            <input type="text" name="name" value="" placeholder="Jane Doe">
        </div>
        <div class="form-group">
            <label for="Healthcard" class="text-dark">Healthcard</label>
            <input type="text" name="Healthcard" value="" placeholder="10 Digit Number">
        </div>
        <div class="form-group">
            <label for="gender" class="text-dark">Gender</label>
            <div class="radio inline">
                <input type="radio" id="radio-2" name="gender" value="Male" >
                <label for="radio-2" class="radio-label">Male</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-3" name="gender" value="Female" >
                <label for="radio-3" class="radio-label">Female</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-2" name="gender" value="Other" >
                <label for="radio-4" class="radio-label">Other</label>
            </div>
        </div>

        <div class="form-group">
            <label for="gender" class="text-dark">Status</label>
            <div class="radio inline">
                <input type="radio" id="radio-5" name="status" value="Intpatient" >
                <label for="radio-5" class="radio-label">Intpatient</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-6" name="status" value="Outpatient" >
                <label for="radio-6" class="radio-label">Outpatient</label>
            </div>
        </div>

        <div class="form-group">
            <button type="submit" class="btn text-dark update">Save</button>
        </div>

    </div>
</form>